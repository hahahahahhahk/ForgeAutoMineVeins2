-- Pickaxe Detection (detects Arcane Pickaxe automatically)
local function getPickaxe()
    local equipped = char:FindFirstChildOfClass("Tool")
    if equipped then return equipped end
    for _, tool in pairs(player.Backpack:GetChildren()) do
        if tool:IsA("Tool") then return tool end
    end
    return nil
end

-- Find Nearest Basalt Vein Only
local function getNearestRock()
    local rocksFolder = workspace:FindFirstChild("Rocks")
    if not rocksFolder then
        statusLabel.Text = "Rocks folder not found!"
        statusLabel.TextColor3 = Color3.new(1, 0.4, 0.4)
        return nil
    end
    
    local nearestRock, shortestDist = nil, math.huge
    local playerPos = char.HumanoidRootPart.Position
    
    for _, rock in pairs(rocksFolder:GetChildren()) do
        local rockName = string.lower(rock.Name)
        if rock:IsA("Model") and rock:GetPivot() and string.find(rockName, "basalt") and string.find(rockName, "vein") then
            local rockPos = rock:GetPivot().Position
            local dist = (rockPos - playerPos).Magnitude
            if dist < shortestDist and dist < 500 then
                shortestDist = dist
                nearestRock = rock
            end
        end
    end
    
    if nearestRock then
        statusLabel.Text = string.format("Mining %s (%.0f studs)", nearestRock.Name, shortestDist)
        statusLabel.TextColor3 = Color3.new(0.2, 1, 0.2)
        return nearestRock
    else
        statusLabel.Text = "No Basalt Veins nearby! (500 stud range)"
        statusLabel.TextColor3 = Color3.new(1, 0.8, 0.2)
        return nil
    end
end

-- Auto Mine Logic
local autoMineEnabled = false

local function toggleAutoMine()
    autoMineEnabled = not autoMineEnabled
    
    if autoMineEnabled then
        toggleBtn.Text = "Auto Mine: ON"
        toggleBtn.BackgroundColor3 = Color3.new(0.2, 0.8, 0.2)
        statusLabel.Text = "Started! Auto-equipping pickaxe..."
        statusLabel.TextColor3 = Color3.new(0.2, 1, 0.2)
        
        task.spawn(function()
            while autoMineEnabled do
                pcall(function()
                    char, humanoid = waitForChar()
                    
                    local pickaxe = getPickaxe()
                    if pickaxe and pickaxe.Parent ~= char then
                        humanoid:EquipTool(pickaxe)
                        task.wait(0.6)
                    end
                    
                    pickaxe = getPickaxe()
                    if pickaxe and pickaxe.Parent == char then
                        local rock = getNearestRock()
                        if rock then
                            local pivotCF = rock:GetPivot()
                            local size = rock:GetExtentsSize()
                            local lowestY = pivotCF.Position.Y - (size.Y / 2)
                            local mineY = lowestY - 7.8
                            local relativeY = mineY - pivotCF.Position.Y
                            
                            char.HumanoidRootPart.CFrame = pivotCF * CFrame.new(0, relativeY, -6) * CFrame.Angles(0, math.pi, 0)
                            task.wait(0.15)
                            pickaxe:Activate()
                        end
                    else
                        statusLabel.Text = "No pickaxe found! Equip Arcane Pickaxe manually"
                        statusLabel.TextColor3 = Color3.new(1, 0.4, 0.4)
                    end
                end)
                task.wait(0.45)  -- Mining speed (lower = faster, but riskier)
            end
        end)
    else
        toggleBtn.Text = "Auto Mine: OFF"
        toggleBtn.BackgroundColor3 = Color3.new(0.8, 0.2, 0.2)
        statusLabel.Text = "Stopped!"
        statusLabel.TextColor3 = Color3.new(1, 0.6, 0.6)
    end
end

-- Button Connections
toggleBtn.MouseButton1Click:Connect(toggleAutoMine)

closeBtn.MouseButton1Click:Connect(function()
    autoMineEnabled = false
    screenGui:Destroy()
end)

-- Handle Respawn
player.CharacterAdded:Connect(function()
    task.wait(1)
    char, humanoid = waitForChar()
end)

